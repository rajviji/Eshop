<title>Login </title>

<!--===============================================================================================-->
  <link rel="stylesheet" type="text/css" href="/assets/main1.css">
  <link rel="stylesheet" type="text/css" href="/assets/util1.css">
<!--   <link rel="stylesheet" type="text/css" href="/assets/font-awesome.css">
 -->


<!--===============================================================================================-->

  <div class="limiter">
<!--     <div class="container-login100" style="background-image: url('/assets/bg-02.jpg');">
 -->      
    <div class="container-login100" style="background-image: url('/assets/bg-02.jpg');">
      <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
<!--         <div class="login100-form">
 -->   <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: "login100-form"})do |f| %>
          <span class="login100-form-title p-b-49">
            Login
          </span>

          <div class="wrap-input100 validate-input m-b-23">
            <span class="label-input100"><i class="fa fa-envelope" aria-hidden="true"></i> &nbsp;Email</span>
            <!-- <input class="input100 focus" type="text" name="username" placeholder="Type your username"> -->
             <%= f.email_field :email, autofocus:true, autocomplete: "email", class: "input100 focus", placeholder: "Type your email", required: true %>
            <span class="focus-input100"></span>

          </div>

          <div class="wrap-input100 validate-input">
            <span class="label-input100"><i class="fa fa-lock"></i>&nbsp; Password</span>
          <!--  <input class="input100" type="password" name="pass" placeholder="Type your password">  -->
          <%= f.password_field :password, autocomplete: "current-password", class: "input100", placeholder: "Type your password", required: true %>
          <span class="focus-input100"></span>

          </div>

          <div class="errors">
          <!--   <p class = "notice" ><%= notice %> </p> -->
            <p class = "alert", style="color: red" ><%= alert %></p>
          </div>
          
          <div class="text-right p-t-8 p-b-31">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot password?", new_password_path(resource_name) %><br />
            <% end %>
            <!-- <a href="#">
              Forgot password?
            </a> -->
          </div>
          
          <div class="container-login100-form-btn">
            <div class="wrap-login100-form-btn">
              <div class="login100-form-bgbtn"></div>
              <button class="login100-form-btn">
                Login
              </button>
              <!--  <%#= f.submit "Log in", class: "login100-form-btn" %> -->
            </div>
          </div>

          <div class="txt1 text-center p-t-16 p-b-20">
            <span>
              OR <%= link_to "Sign up", new_registration_path(resource_name), class: 'txt2' %> Using 
            </span>
            
          </div>
          <div class="flex-c-m" style="margin-bottom: -99px;
    margin-right: 100px;">
            <a href="#" class="login100-social-item bg1">
              <i class="fa fa-facebook"></i>
            </a>

            <a href="#" class="login100-social-item bg2">
              <i class="fa fa-twitter"></i>
            </a>

            <a href="#" class="login100-social-item bg3">
              <i class="fa fa-google"></i>
            </a>
          </div>
          <%end %>
        </div>
      </div>
    </div>
  </div>






